<%-include('header')%>
<div class="container-fluid">

  <div class="row">
      <div class="col-lg-4 col-sm-12 col-sm-12">
        <div class="card mb-3">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Sale</h5>                

            <small class="text-muted float-end"></small>
          </div>
          <div class="card-body">
                <div class="mb-3 col-lg-6 ">
                    <label class="form-label" for="basic-default-bil"><Bill Number></label>
                      
                    <input class="form-control" style="border: 0; font-weight: bold;" tabindex="0"  type="number" id="bil" name="bil" value='<%=bb.bill+1%>'>
                      
                </div>
                <div class="mb-3 ">
                    <label class="form-label"  for="basic-default-fullname">Select customer</label>
                    <select tabindex="0"  class="form-select job" id="cname" name="cname"  required="">
                        
                        <option value="customer">customer</option>
                        
                          <option value="Ahmad">ahmand</option>
                          
                    </select>
                  </div>
                <div class="mb-3 ">
                  <label class="form-label"  for="basic-default-fullname">Select Product</label>

                <input type="text" tabindex="0" class="form-control"name="pname" id="pname" required placeholder="Product">
              </div>
              <div class="mb-3 ">
                <label class="form-label"  for="basic-default-fullname">Price pp</label>
                <input type="text" tabindex="0" class="form-control" required name="pprice" id="pprice" placeholder="Price">
              </div>
              <div class="mb-3 ">
                <label class="form-label"  for="basic-default-fullname">Qauntity</label>
 
                <input type="number" tabindex="0" class="form-control" onblur="sumInputs()" required name="pquantity" id="pquantity" placeholder="Quantity">
              </div>
              <div class="mb-3 ">
                
                <input type="text" hidden tabindex="0" class="form-control"  name="total" id="total" placeholder="Total">

              </div>
              <a onclick="sumInputs()" class="btn btn-primary float-end col-lg-12">Save</a>
             
          </div>
        </div>
      </div>
      <div class="col-lg-8 col-sm-12 col-sm-12 d-flex align-items-stretch">
        <div class="card w-100">
          <div class="card-body p-4">
            <h5 class="card-title fw-semibold mb-4">Recent Sales</h5>

            <div class="table-responsive">
                <div class="float-end">
                  <label for="" >Bill No : </label><label name="bilno" id="bilno" for=""></label>
                </div>
                
              <table class="table text-nowrap mb-0 align-middle" id="myTable">
                <thead class="text-dark fs-4">
                  <tr>
                    
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Customer</h6>
                    </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Product</h6>
                    </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Price</h6>
                    </th>
                    <th class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">Qauntity</h6>
                      </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Total</h6>
                    </th>
                    <th class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">Action</h6>
                    </th>
                  </tr>
                </thead>
                <tbody id="dt">
                    
                  
                  
                              
                </tbody>
                <tfoot>
                  <tr style="font-weight: bolder;">
                      <td colspan="3">Total</td>
                      <td id="qt"></td>
                      <td id="gt"></td>
                      <td><input type="text" tabindex="0" class="form-control"name="paid" id="paid" required placeholder="Payment"></td>
                  </tr>
              </tfoot>
              </table>
              <button onclick="sendData()" class="btn btn-primary float-end col-lg-12">Save</button>
              
            </div>
          </div>
        </div>
      </div>
  </div>
  <script>
    // Function to sum the values
    function sumInputs() {
        const num1 = parseFloat(document.getElementById('pprice').value) || 0;
        const num2 = parseFloat(document.getElementById('pquantity').value) || 0;
        const result = num1 * num2;
        document.getElementById('total').value = result;
        addall();
    };
    
    
  </script>
  
</div>
<%-include('footer')%>